{
  "openapi": "3.0.1",
  "paths": {
    "/some/path": {
      "get": {
        "operationId": "some-path",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/Response" } }
            }
          }
        }
      }
    }
  },
  "components": {
    "CommonProperty": {
      "type": "string"
    },
    "BasicPropertyOption": {
      "type": "object",
      "properties": {
        "commonProperty": {
          "$ref": "#/components/CommonProperty"
        }
      }
    },
    "ArrayPropertyOption": {
      "type": "object",
      "properties": {
        "commonProperty": {
          "type": "array",
          "items": { "$ref": "#/components/CommonProperty" }
        }
      }
    },
    "Response": {
      "oneOf": [
        { "$ref": "#/components/BasicPropertyOption" },
        { "$ref": "#/components/ArrayPropertyOption" }
      ]
    }
  }
}
